<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paco.preferencias.MainActivity">

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="99dp"
        android:text="Nombre" />

    <TextView
        android:id="@+id/dni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nombre"
        android:layout_alignRight="@+id/nombre"
        android:layout_below="@+id/nombre"
        android:layout_marginTop="27dp"
        android:text="DNI"
        android:layout_alignLeft="@+id/nombre"
        android:layout_alignStart="@+id/nombre" />

    <TextView
        android:id="@+id/edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dni"
        android:layout_alignRight="@+id/dni"
        android:layout_below="@+id/dni"
        android:layout_marginTop="31dp"
        android:text="Edad"
        android:layout_alignLeft="@+id/dni"
        android:layout_alignStart="@+id/dni" />

    <TextView
        android:id="@+id/sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edad"
        android:layout_alignRight="@+id/edad"
        android:layout_below="@+id/edad"
        android:layout_marginTop="27dp"
        android:text="Sexo"
        android:layout_alignLeft="@+id/edad"
        android:layout_alignStart="@+id/edad" />

    <EditText
        android:id="@+id/nombretxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dni"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/dnitxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edad"
        android:layout_centerHorizontal="true"
       />

    <EditText
        android:id="@+id/edadtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sexo"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/sexotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sexo"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sexotxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="Button" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/button">

        <RadioButton
            android:id="@+id/rmujer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mujer" />

        <RadioButton
            android:id="@+id/rhombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hombre" />
    </RadioGroup>

</RelativeLayout>
